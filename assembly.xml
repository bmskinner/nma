<?xml version="1.0" encoding="utf-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
      <!-- Create the zip file for uploading to website. This
     holds the files needed to install as a plugin to Image -->
    <id>release</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/dependency-jars</directory>
            <outputDirectory>Nuclear_Morphology_Analysis</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>Nuclear_Morphology_Analysis</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>Nuclear_Morphology_${project.version}.jar</include>
            </includes>
        </fileSet>
         <fileSet>
            <!-- ImageJ helper scripts -->
            <outputDirectory>Nuclear_Morphology_Analysis</outputDirectory>
            <directory>scripts</directory>
            <includes>
                <include>*.ijm</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
