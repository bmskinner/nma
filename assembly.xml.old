<?xml version="1.0" encoding="utf-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
      <!-- Create the zip file for uploading to website. This
     holds the files needed to install as a plugin to Image -->
    <id>build-imagej-folder</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
    
   		<!-- Dependency jars -->
        <fileSet>
            <directory>${project.build.directory}/dependency-jars</directory>
            <outputDirectory>${project.full.name}</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        
        <!-- Main jar -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>${project.full.name}</outputDirectory>
            <includes>
                <include>${jar.finalName}.jar</include>
            </includes>
        </fileSet>
        
        <!-- Readme -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>${project.full.name}</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
        
        <!-- ImageJ helper scripts -->
         <fileSet>
            <outputDirectory>${project.full.name}</outputDirectory>
            <directory>${project.scripts.directory</directory>
            <includes>
                <include>*.ijm</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
